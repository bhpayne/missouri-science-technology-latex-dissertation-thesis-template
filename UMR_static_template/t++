#/bin/sh
echo ----------------------------------------------------------------------------
echo "Running script $1."
echo "The purpose of this script is to compile a latex document and convert"
echo "the dvi to a pdf."
echo ----------------------------------------------------------------------------

echo ----------------------------------------------------------------------------
echo Running latex the first time.
echo latex $1
echo ----------------------------------------------------------------------------
latex $1

echo ----------------------------------------------------------------------------
echo Running latex the second time.
echo ----------------------------------------------------------------------------
latex $1

echo ----------------------------------------------------------------------------
echo Running bibtex the first time.
echo bibtex $1
echo ----------------------------------------------------------------------------
bibtex $1

echo ----------------------------------------------------------------------------
echo Running bibtex the second time.
echo bibtex $1
echo ----------------------------------------------------------------------------
bibtex $1

echo ----------------------------------------------------------------------------
echo Running latex post bibtex three times.
echo latex $1
echo ----------------------------------------------------------------------------
latex $1
echo ----------------------------------------------------------------------------
latex $1
echo ----------------------------------------------------------------------------
latex $1

echo ----------------------------------------------------------------------------
echo Converting the dvi file to a ps file.
#echo dvips $1.dvi -o $1.ps
echo dvips -Ppdf -G0 -tletter $1.dvi
echo ----------------------------------------------------------------------------
#dvips $1.dvi -o $1.ps
dvips -Ppdf -G0 -tletter $1.dvi

echo ----------------------------------------------------------------------------
echo Converting the dvi file to a pdf file.
echo ps2pdf $1.ps $1.pdf
#echo dvipdf $1.dvi $1.pdf
echo ----------------------------------------------------------------------------
#dvipdf $1.dvi $1.pdf
ps2pdf $1.ps $1.pdf
